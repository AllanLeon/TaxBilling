<!-- Fragment that contains the bill table -->
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Layout that contains the buttons -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonAdd"
                style="@style/ButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/ButtonAdd" />
            
            <Button
                android:id="@+id/ButtonRemove"
                style="@style/ButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/ButtonRemove" />
            
            <Button
                android:id="@+id/ButtonClean"
                style="@style/ButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ButtonClean" />
        </LinearLayout>

        <!-- Layout that contains the header row of the table -->

        <TableLayout
            android:id="@+id/HeaderTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/headerRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="100dp"
                    android:minWidth="60dp"
                    android:text="@string/TableColumn1" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"
                    android:text="@string/TableColumn2" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="150dp"
                    android:minWidth="130dp"
                    android:text="@string/TableColumn3" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="150dp"
                    android:minWidth="150dp"
                    android:text="@string/TableColumn4" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"
                    android:text="@string/TableColumn5" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:maxWidth="150dp"
                    android:minWidth="110dp"
                    android:text="@string/TableColumn6" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:minWidth="130dp"
                    android:text="@string/TableColumn7" />
            </TableRow>
        </TableLayout>

        <!-- Layout that containt the 'content' of the bill table -->

        <ScrollView
            android:id="@+id/ContentScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/ContentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/contentRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent" >

                    <TextView
                        style="@style/HeaderStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="100dp"
                        android:minWidth="60dp"
                        android:text="@string/TableColumn1" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="120dp"
                        android:minWidth="120dp"
                        android:text="@string/TableColumn2" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="150dp"
                        android:minWidth="130dp"
                        android:text="@string/TableColumn3" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="150dp"
                        android:minWidth="150dp"
                        android:text="@string/TableColumn4" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="120dp"
                        android:minWidth="120dp"
                        android:text="@string/TableColumn5" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="1dp"
                        android:maxWidth="150dp"
                        android:minWidth="110dp"
                        android:text="@string/TableColumn6" />

                    <TextView
                        style="@style/ContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:maxWidth="150dp"
                        android:minWidth="130dp"
                        android:text="@string/TableColumn7" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

</HorizontalScrollView>